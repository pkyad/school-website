---
import Layout from '~/layouts/PageLayout.astro';
import ContactUs from '~/components/widgets/Contact.astro';
import Features2 from '~/components/widgets/Features2.astro';

const metadata = {
  title: 'Contact',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <ContactUs
    id="form"
    title="हमसे संपर्क करें"
    subtitle="त्वरित उत्तरों के लिए, हमारे अक्सर पूछे जाने वाले प्रश्न अनुभाग देखें। आप जिस समाधान की तलाश कर रहे हैं वह आपको वहीं मिल सकता है! यदि नहीं, तो हमारी सहायता टीम आपकी सहायता करने में प्रसन्न है।"
    inputs={[
      {
        type: 'text',
        name: 'name',
        label: 'नाम',
      },
      {
        type: 'email',
        name: 'email',
        label: 'ईमेल',
      },
    ]}
    textarea={{
      label: 'संदेश',
    }}
    disclaimer={{
      label:
        'इस संपर्क फ़ॉर्म को सबमिट करके, आप अपनी व्यक्तिगत जानकारी के संग्रह को स्वीकार करते हैं और सहमत होते हैं।',
    }}
    description="हमारी सहायता टीम आमतौर पर 24 व्यावसायिक घंटों के भीतर जवाब देती है।"
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="हम सहायता के लिए यहां उपलब्ध हैं!"
    items={[
      {
        title: 'दूरभाष',
        description: '+91-7857904210',
        icon: 'tabler:headset',
      },
      {
        title: 'ईमेल',
        description: 'hello@krishnaacademy.org',
        icon: 'tabler:mail',
      },
      {
        title: 'पता',
        description: 'गौतम चौक, सोनपुर, सारण, बिहार 841101, भारत',
        icon: 'tabler:map-pin',
      },
    ]}
  />
</Layout>
